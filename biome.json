{
	"$schema": "./node_modules/@biomejs/biome/configuration_schema.json",
	"vcs": {
		"enabled": true,
		"clientKind": "git"
	},
	"files": {
		"includes": ["**", "!**/node_modules", "!**/dist"]
	},
	"formatter": {
		"enabled": true,
		"indentStyle": "tab"
	},
	"linter": {
		"enabled": true,
		"rules": {
			"recommended": true,
			"style": {
				"noEnum": "error",
				"noUselessElse": "error",
				"useBlockStatements": "error",
				"useCollapsedElseIf": "error",
				"useCollapsedIf": "error"
			},
			"suspicious": {
				"noEvolvingTypes": "error",
				"noVar": "error",
				"noUnknownAtRules": "off"
			},
			"complexity": {
				"useSimplifiedLogicExpression": "error"
			}
		}
	},
	"javascript": {
		"formatter": {
			"quoteStyle": "double"
		}
	},
	"assist": {
		"enabled": true,
		"actions": {
			"source": {
				"organizeImports": "on"
			}
		}
	}
}
